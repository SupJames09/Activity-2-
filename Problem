#include <iostream>
#include <conio.h>

using namespace std;

int main()
{
	int Day, Year, Month;
	
	
	cout << "Hi there! Want this program to generate a date? \n";
	cout << "In order to generate a date, you need to input a:\n";
	cout << "\nA [Month]s' integer depending on its rotation from January to December\n";
	cout << "A [Day] depending on the month\n";
	cout << "And [Year] you wanted\n";
	cout << "\nAn Example is : 1 / 1 / 2000 = January 1, 2000\n";
	cout << "\nNote the Days: You only need to put the Integer in the Month \n\n";
	cout << "[1]January has only 31 days.\t  [7]July has only 31 days.\n";
	cout << "[2]February has only 29 days.\t  [8]August has only 31 days.\n";
	cout << "[3]March has only 31 days.\t  [9]September has only 30 days.\n";
	cout << "[4]April has only 30 days.\t  [10]October has only 31 days.\n";
	cout << "[5]May has only 31 days.\t  [11]November has only 30 days.\n";
	cout << "[6]June has only 30 days.\t  [12]December has only 31 days.\n";
	
	cout << "\nKindly input the Month you wanted: ";
	cin >> Month;
	cout << "\nKindly input the Day depending on the month: ";
	cin >> Day;
	cout << "\nKindly input the Year you wanted: ";
	cin >> Year;
	
	if (Month == 1 && Day <= 31)
	{
		cout << "January " << Day << ", " << Year;
		cout << "\nThank you and Have a good day.";
	}
	else if (Month == 2 && Day <= 29)
	{
		cout << "February " << Day << ", " << Year;
		cout << "\nThank you and Have a good day.";
	}
	else if (Month == 3 && Day <= 31)
	{
		cout << "March " << Day << ", " << Year;
		cout << "\nThank you and Have a good day.";
	}
	else if (Month == 4 && Day <= 30)
	{
		cout << "April " << Day << ", " << Year;
		cout << "\nThank you and Have a good day.";
	}
	else if (Month == 5 && Day <= 31)
	{
		cout << "May " << Day << ", " << Year;
		cout << "\nThank you and Have a good day.";
	}
	else if (Month == 6 && Day <= 30)
	{
		cout << "June " << Day << ", " << Year;
		cout << "\nThank you and Have a good day.";	
	}
	else if (Month == 7 && Day <= 31)
	{
		cout << "July " << Day << ", " << Year;
		cout << "\nThank you and Have a good day.";	
	}
	else if (Month == 8 && Day <= 31)
	{
		cout << "August " << Day << ", " << Year;
		cout << "\nThank you and Have a good day.";	
	}
	else if (Month == 9 && Day <= 30)
	{
		cout << "September " << Day << ", " << Year;
		cout << "\nThank you and Have a good day.";	
	}
	else if (Month == 10 && Day <= 31)
	{
		cout << "October " << Day << ", " << Year;
		cout << "\nThank you and Have a good day.";	
	}
	else if (Month == 11 && Day <= 30)
	{
		cout << "November " << Day << ", " << Year;	
		cout << "\nThank you and Have a good day.";
	}
	else if (Month == 12 && Day <= 31)
	{
		cout << "December " << Day << ", " << Year;	
		cout << "\nThank you and Have a good day.";
	}
	else 
	{
		cout << "\nUnfortunately, Invalid Date!\n";
		cout << "\nThank you and Have a good day.";
	}
_getch();
return 0;
}
